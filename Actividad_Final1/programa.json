{
    "descripcion": "Ejemplo completo de funcionalidades del filtro CSV",
    "operaciones": [
        {
            "tipo": "load",
            "archivo": "eventos.csv"
        },
        {
            "tipo": "filter",
            "columna": "costo_entrada",
            "operador": ">",
            "valor": 100000
        },
        {
            "tipo": "filter",
            "columna": "tipo_evento",
            "operador": "==",
            "valor": "Concierto"
        },
        {
            "instruccion": "filter column \"estado_evento\" == \"Realizado\" OR filter column \"estado_evento\" == \"Programado\";"
        },
        {
            "tipo": "filter",
            "filter_type": "between",
            "columna": "cantidad_asistentes",
            "valor1": 2000,
            "valor2": 5000
        },
        {
            "tipo": "filter",
            "filter_type": "in",
            "columna": "lugar",
            "valores": ["Madrid", "Barcelona", "Valencia"]
        },
        {
            "tipo": "filter",
            "filter_type": "like",
            "columna": "nombre_evento",
            "patron": "%Concierto%"
        },
        {
            "tipo": "sort",
            "columna": "costo_entrada",
            "orden": "desc"
        },
        {
            "tipo": "limit",
            "limite": 10
        },
        {
            "tipo": "aggregate",
            "funcion": "count",
            "columna": "id_evento"
        },
        {
            "tipo": "aggregate",
            "funcion": "average",
            "columna": "cantidad_asistentes"
        },
        {
            "tipo": "aggregate",
            "funcion": "sum",
            "columna": "costo_entrada"
        },
        {
            "tipo": "aggregate",
            "funcion": "min",
            "columna": "costo_entrada"
        },
        {
            "tipo": "aggregate",
            "funcion": "max",
            "columna": "costo_entrada"
        },
        {
            "tipo": "print"
        }
    ]
}